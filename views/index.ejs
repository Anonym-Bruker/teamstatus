<!DOCTYPE html>
<html lang="en" xmlns:border="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Teamstatus</title>
</head>
<body>
<script>
function redonchange(color) {
	var label = document.getElementById("lblred"); 
	label.innerHTML = color;
	document.getElementById("colorform").submit();
}
function greenonchange(color) {
	var label = document.getElementById("lblgreen"); 
	label.innerHTML = color;
	document.getElementById("colorform").submit();
}
function blueonchange(color) {
	var label = document.getElementById("lblblue"); 
	label.innerHTML = color;
	document.getElementById("colorform").submit();
}
function setColors(red, green, blue) {
	var inputRed = document.getElementById("tokenRed"); 
	inputRed.value = red;
	var inputGreen = document.getElementById("tokenGreen"); 
	inputGreen.value = green;
	var inputBlue = document.getElementById("tokenBlue"); 
	inputBlue.value = blue;
	document.getElementById("colorform").submit();
}
</script>
Current status: <%=status%>
